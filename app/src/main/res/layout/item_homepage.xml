<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical"
    android:padding="4dp" >

    <!-- First row containing text and button called view all -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_itemhomepage_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold" >
                
                
            </TextView>
            
         
            
        </LinearLayout>

        <TextView
            android:id="@+id/txt_itemhomepage_seeall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="2dp"
            android:text="- View all"
            android:textColor="@color/dh_color"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <!-- First row containing text and button called view all -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/parentItemOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
         	android:paddingRight="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@drawable/background_card"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgItemOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <com.wm.customviews.CustomTextview
                android:id="@+id/txt_itemhomepage_productname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="8dp"
                android:background="#ccae0101"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                   android:layout_marginLeft="16dp"
                android:paddingTop="4dp"
                android:text="Product name"
                android:singleLine="true"
                	android:textSize="@dimen/my_custom_textsize"
                android:textColor="#fff" >
            </com.wm.customviews.CustomTextview>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/parentItemTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            	android:paddingLeft="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@drawable/background_card"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/imgItemTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.wm.customviews.CustomTextview
                android:id="@+id/txt_itemhomepage_productname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="8dp"
                android:background="#ccae0101"
                	android:textSize="@dimen/my_custom_textsize"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                   android:singleLine="true"
                   android:layout_marginLeft="16dp"
                android:paddingTop="4dp"
                android:text="Product name"
                android:textColor="#fff" >
            </com.wm.customviews.CustomTextview>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>